generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(cuid())
  username String @unique
  fullname String 
  password String
  gender Gender
  profilePic String
  ceratedAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  conversationsIds String[]
  conversations Conversation[]
  messages Message[]
}

model Conversation{
  id String @id @default(cuid())
  ceratedAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    participantsIds String[]
    participants User[]

    messagesIds String[]
    messages Message[]
}

model Message {
  id String @id @default(cuid())

  conversationId String 
  conversion Conversation @relation(fields: [conversationId],references: [id])

  sendersId String
  senders User @relation(fields: [sendersId],references: [id])
}


enum Gender {
  male
  female
}